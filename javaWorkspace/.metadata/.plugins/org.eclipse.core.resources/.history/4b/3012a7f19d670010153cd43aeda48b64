package Package2;
import java.util.Scanner;

public class Control {

	public static void main(String[] args) {
		// 제어문 반복문 : 프로그램의 흐름은 위에서 아래로 진행이 됨 -> 방향을 바꾸는 역할
		// if문
		int score = 85;
		String grade;
		if(score >=90) {
			if(score >= 95) {
				grade = "A+";
			}else {
				grade = "A0";
			}
		}else {
			if(score >= 85) {
				grade = "B+";
			}else {
				grade = "B0";
			}
		}
		
		//switch
		Scanner sc = new Scanner(System.in);
		int year;
		System.out.println("학년 입력 : ");
		year = sc.nextInt();
		switch(year) {
		case 1: System.out.println("1학년");break;
		case 2: System.out.println("2학년");break;
		case 3: System.out.println("3학년");break;
		case 4: System.out.println("4학년");break;
		default: System.out.println("값을 잘 못 입력했습니다.");break;
		}

	}

}
