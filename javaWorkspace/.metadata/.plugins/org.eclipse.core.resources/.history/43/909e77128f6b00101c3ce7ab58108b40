package arrayType;
import java.util.*;
public class Array2DEc2 {

	public static void main(String[] args) {
		// 2차원 배열을 통해 영단어 맞히기
		
		String quiz[][] = {{"chair","의자"},
							{"computer","컴퓨터"},
							{"integer","정수"}};
		
		Scanner sc = new Scanner(System.in);
		System.out.print("Q1.chair의 뜻은?");
		String chair = sc.next();
		if(quiz[0][1].equals(chair)) {
			System.out.println("정답입니다");
		}else {
			System.out.println("틀렸습니다. 정답은 "+quiz[0][1]+"입니다.");
			
		System.out.print("Q2.computer의 뜻은?");
		String raptop = sc.next();
		if(quiz[1][1].equals(raptop)) {
			System.out.println("정답입니다");
		}else {
			System.out.println("틀렸습니다. 정답은 "+quiz[1][1]+"입니다.");
			
			System.out.print("Q3.integer의 뜻은?");
			String integer = sc.next();
			if(quiz[2][1].equals(integer)) {
				System.out.println("정답입니다");
			}else {
				System.out.println("틀렸습니다. 정답은 "+quiz[2][1]+"입니다.");
		
	}

	}

}
