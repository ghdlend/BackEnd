package arrayType;

public class Array1 {

	public static void main(String[] args) {
		// 배열 기본 문법
		// 배열 선언 - 사용불가
		int[] a;
		int b[];
		
		//배열 생성 - 메모리 할당
		a = new int[3];
		
		//값 직접 저장
		a[0] = 10;
		a[1] = 20;
		a[2] = 30;
		
		//원소 접근 
		System.out.println(a[1]);
		
		//전체 원소 접근
		//for문 활용
		for(int i = 0; i<a.length;i++) {
			System.out.println(a[i]);
		}
		
		//배열 변수 a에 저장된 값 출력
		System.out.println(a); //[I#
		//재직증명서,가족관계증명서
	}

}
